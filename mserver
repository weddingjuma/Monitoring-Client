description="Monitoring Server user and program statistical gathering service"

# Dependencies of Monitoring Server
depend() {
  need net
  need localmount
}

start() {
  ebegin "Starting Monitoring Server"
  start-stop-daemon  --background --start --exec /opt/monitoring/LUMServer &>/dev/null --pidfile /var/run/lumserver.pid --make-pidfile --name LUMServer
  eend $?
}

stop() {
  ebegin "Stopping Monitoring Server"
  start-stop-daemon --stop --exec /opt/monitoring/LUMServer --pidfile /var/run/lumserver.pid
  eend $?
}
